APP_NAME="Electric Ease"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database
BCRYPT_ROUNDS=12

# Database - Docker MySQL
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=electricease
DB_USERNAME=electricease
DB_PASSWORD=secret

# Cache & Session
CACHE_STORE=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false

# Queue - use sync for local dev
QUEUE_CONNECTION=sync

# Broadcasting
BROADCAST_CONNECTION=log

# Redis (optional - not required for basic local dev)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Mail (use log driver for local testing)
MAIL_MAILER=log
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="admin@electric-ease.com"
MAIL_FROM_NAME="${APP_NAME}"

# Filesystem - use local for Docker
FILESYSTEM_DISK=local

# Vite dev server
VITE_URL=http://localhost:3000

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8000,localhost:3000

# Scout/Algolia (optional)
SCOUT_DRIVER=
SCOUT_QUEUE=
ALGOLIA_APP_ID=
ALGOLIA_SECRET=

# AI Services - Add your keys for Copilot functionality
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Vector Store (optional)
UPSTASH_VECTOR_REST_URL=
UPSTASH_VECTOR_REST_TOKEN=

# AWS (optional - not needed for local dev)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-2
AWS_BUCKET=local-electricease
AWS_USE_PATH_STYLE_ENDPOINT=false

# Stripe (optional)
STRIPE_KEY=
STRIPE_SECRET=

# Sidecar (optional - not needed for local dev)
SIDECAR_ACCESS_KEY_ID=
SIDECAR_SECRET_ACCESS_KEY=
SIDECAR_REGION=
SIDECAR_ARTIFACT_BUCKET_NAME=
SIDECAR_EXECUTION_ROLE=

# Postmark (optional)
POSTMARK_TOKEN=

# Flare (optional)
FLARE_KEY=
