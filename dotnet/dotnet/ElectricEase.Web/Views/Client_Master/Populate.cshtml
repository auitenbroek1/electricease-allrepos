@{
    ViewBag.Title = "Populate";
    Layout = "~/Views/Shared/_estimLayout.cshtml";
}

<div class="app-body" id="Scroll">
    <div class="magic-layoutz">
        <div class="box magic-element width-full">
            <div class="box-row  profile-hd">
                <h7 class="box-heading">
                    <strong id="title-cont">&nbsp Assemblies and Parts Auto-Populate</strong>
                </h7>
            </div>
            <div id="ClientListDiv">
                <br />
                <div>ClientID: @ViewBag.ClientID</div>
                <div>Company: @ViewBag.Client.Client_Company</div>
                <br />
                <div>Assemblies: @ViewBag.Results[0]["Assemblies"]</div>
                <div>Assemblies_Parts: @ViewBag.Results[0]["Assemblies_Parts"]</div>
                <div>Parts: @ViewBag.Results[0]["Parts"]</div>
                <br />
                <div>
                    <form action="" method="post">
                        <input name="action" type="hidden" value="submit" />
                        <button class="btn btn-primary" type="submit">Auto-Populate this Client record with *New* Electric Ease Assemblies and Parts</button>
                    </form>
                </div>
                <br />
                <div>
                    <form action="" method="post">
                        <input name="action" type="hidden" value="reset" />
                        <button class="btn btn-danger" type="submit">Delete all Assemblies and Parts for this Client record</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    ; (function () {
        $(function () {

            $('#Loading').hide();

            $('button[type="submit"]').on('click', function () {
                $('#Loading').show();
            });

        });
    })(jQuery);
</script>