                                          jobPartGrandTotalsum += parseFloat(ExpTotalsum);
                                      }
                                  }
                              });
                              $('#ActGrandTotal').val(jobPartGrandTotalsum.toFixed(2));
                              // $('#SubEstTotal').val(0);
                          }
                      }
                  });
              });
          });
     
</script>
