                      if (actQty != 0 && cost != 0) {
                          if (!isNaN(ExpTotal)) {
                              $tblrow.find('#JobPartActTotal').val(ExpTotal.toFixed(2));
                              $("#JobPartActTotal").each(function () {
                                  jobPartGrandTotal += parseFloat(ExpTotal);
                                  ii = ii + 1;
                              });
                              $('#ActGrandTotal').val(0);
